#:kivy 1.8.0
<MenuScreen>:   
    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'
        Label:
            size_hint: (1, .1)
            text: 'Qr/bar code reader - Kivy App'
        BoxLayout:
            spacing: 5
            Button:
                text: 'Eg: kivy.Camera'
                on_press: app.load_screen('camera')
            Button:
                text: 'Eg: kivy_garden.xcamera'
                on_press: app.load_screen('scanner2')
        Button:
            text: 'Exit'
            size_hint: (1, .1)
            on_press: app.stop()
                

